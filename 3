#include <stdio.h>

void sort(int at[], int bt[], int process[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (at[j] > at[j + 1]) {
                
                int temp = at[j];
                at[j] = at[j + 1];
                at[j + 1] = temp;

                temp = bt[j];
                bt[j] = bt[j + 1];
                bt[j + 1] = temp;

                temp = process[j];
                process[j] = process[j + 1];
                process[j + 1] = temp;
            }
        }
    }
}

int main() {
    int n = 4;
    int at[4], bt[4], ct[4], wt[4], tat[4], st[4], process[4];
    float awt = 0.0, atat = 0.0;

    for (int i = 0; i < n; i++) {
        process[i] = i + 1;
        printf("Enter arrival time for P%d: ", process[i]);
        scanf("%d", &at[i]);
        printf("Enter burst time for P%d: ", process[i]);
        scanf("%d", &bt[i]);
    }

    
    sort(at, bt, process, n);

    st[0] = at[0];
    ct[0] = st[0] + bt[0];
    tat[0] = ct[0] - at[0];
    wt[0] = tat[0] - bt[0];
    awt += wt[0];
    atat += tat[0];

    for (int i = 1; i < n; i++) {
        if (at[i] > ct[i - 1]) {
            st[i] = at[i]; // CPU idle
        } else {
            st[i] = ct[i - 1];
        }
        ct[i] = st[i] + bt[i];
        tat[i] = ct[i] - at[i];
        wt[i] = tat[i] - bt[i];

        awt += wt[i];
        atat += tat[i];
    }

    awt /= n;
    atat /= n;

    printf("\n\n\tProcess\tAT\tBT\tST\tCT\tWT\tTAT\n");
    for (int i = 0; i < n; i++) {
        printf("\tP%d\t%d\t%d\t%d\t%d\t%d\t%d\n", process[i], at[i], bt[i], st[i], ct[i], wt[i], tat[i]);
    }

    printf("\n\nGantt Chart:\n|");
    for (int i = 0; i < n; i++) {
        printf("  P%d  |", process[i]);
    }

    printf("\n0");
    for (int i = 0; i < n; i++) {
        printf("     %d", ct[i]);
    }

    printf("\n\nAverage Waiting Time: %.2f", awt);
    printf("\nAverage Turnaround Time: %.2f\n", atat);

    return 0;
}

