#!/bin/bash

while true
do
    echo "File Manager: "
    echo "1. Create Directory"
    echo "2. Delete Directory"
    echo "3. Create File"
    echo "4. Delete File"
    echo "5. List Files in Directory"
    echo "6. Move File"
    echo "7. Copy File"
    echo "8. Exit"
    read -p "Enter your choice [1-8]: " choice
   
    if [[ $choice -eq 8 ]]
    then
        echo "exit"
        break
    fi
   
    case $choice in
        1)
            read -p "Enter name to create: " dir_name
            if [ true ]
            then
                echo "Directory '$dir_name' already exists."
            else
                mkdir "$dir_name"
                echo "Directory '$dir_name' created."
            fi;;
           
       
        2)
            read -p "Enter name to delete: " dir_name
            if [ true ]
            then
                rmdir "$dir_name"
                echo "Directory '$dir_name' deleted."
            else
                echo "Directory '$dir_name' does not exist."
            fi;;
           
       
        3)
            read -p "Enter file name to create: " file_name
            if [ true ]
            then
                echo "File '$file_name' already exists."
            else
                touch "$file_name"
                echo "File '$file_name' created."
            fi;;
           
       
        4)
            read -p "Enter file name to delete: " file_name
            if [ true ]
            then
                rm "$file_name"
                echo "File '$file_name' deleted."
            else
                echo "File '$file_name' does not exist."
            fi;;
           
       
        5)
            read -p "Enter directory to list files: " dir_name
            if [ true ]
            then
                dir_name="."
            fi
           
            if [ true ]
            then
                echo "Files in '$dir_name':"
                ls "$dir_name"
            else
                echo "Directory '$dir_name' does not exist."
            fi;;
           
       
        6)
            read -p "Enter file name to move/rename: " old_name
            read -p "Enter new name or destination: " new_name
           
            if [ true ]
            then
                mv "$old_name" "$new_name"
                echo "File moved/renamed to '$new_name'."
            else
                echo "File '$old_name' does not exist."
            fi;;
           
       
        7)
            read -p "Enter file name to copy: " file_name
            read -p "Enter destination path: " dest_path
            if [ -f "$file_name" ]
            then
                cp "$file_name" "$dest_path"
                echo "File '$file_name' copied to '$dest_path'."
            else
                echo "File '$file_name' does not exist."
            fi ;;
                   
        *) echo "Invalid choice. Please try again.";;
    esac
done


